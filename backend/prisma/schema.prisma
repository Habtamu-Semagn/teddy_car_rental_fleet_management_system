generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id              Int              @id @default(autoincrement())
  email           String           @unique
  password        String
  role            Role             @default(CUSTOMER)
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  auditLogs       AuditLog[]
  managedBookings Booking[]        @relation("EmployeeBookings")
  bookings        Booking[]
  customerProfile CustomerProfile?
}

model CustomerProfile {
  id               Int     @id @default(autoincrement())
  userId           Int     @unique
  firstName        String
  lastName         String
  phoneNumber      String
  address          String?
  driverLicenseUrl String?
  idCardUrl        String?
  agreementSigned  Boolean @default(false)
  user             User    @relation(fields: [userId], references: [id])
}

model Car {
  id           Int           @id @default(autoincrement())
  make         String
  model        String
  year         Int
  plateNumber  String        @unique
  category     String
  imageUrl     String?
  dailyRate    Decimal
  status       CarStatus     @default(AVAILABLE)
  features     String[]
  location     String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  bookings     Booking[]
  maintenances Maintenance[]
}

model Booking {
  id               Int              @id @default(autoincrement())
  userId           Int
  carId            Int?
  packageId        Int?
  startDate        DateTime
  endDate          DateTime
  totalAmount      Decimal
  status           BookingStatus    @default(PENDING)
  idCardUrl        String?
  driverLicenseUrl String?
  processedById    Int?
  assignedDriver   String?
  driverPhone      String?
  pickupLocation   String?
  returnLocation   String?
  isDelivery       Boolean          @default(false)
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt
  car              Car?             @relation(fields: [carId], references: [id])
  package          Package?         @relation(fields: [packageId], references: [id])
  processedBy      User?            @relation("EmployeeBookings", fields: [processedById], references: [id])
  user             User             @relation(fields: [userId], references: [id])
  payment          Payment?
  rentalAgreement  RentalAgreement?
}

model Payment {
  id              Int      @id @default(autoincrement())
  bookingId       Int      @unique
  amount          Decimal
  method          String
  transactionId   String?
  status          String   @default("PENDING")
  createdAt       DateTime @default(now())
  payerIdentifier String?
  booking         Booking  @relation(fields: [bookingId], references: [id])
}

model RentalAgreement {
  id            Int       @id @default(autoincrement())
  bookingId     Int       @unique
  agreementUrl  String?
  signedAt      DateTime?
  termsAccepted Boolean   @default(false)
  booking       Booking   @relation(fields: [bookingId], references: [id])
}

model Maintenance {
  id          Int       @id @default(autoincrement())
  carId       Int
  description String
  cost        Decimal?
  startDate   DateTime
  endDate     DateTime?
  status      String
  car         Car       @relation(fields: [carId], references: [id])
}

model AuditLog {
  id        Int      @id @default(autoincrement())
  userId    Int?
  action    String
  details   String?
  timestamp DateTime @default(now())
  user      User?    @relation(fields: [userId], references: [id])
}

model Package {
  id        Int      @id @default(autoincrement())
  name      String
  price     Decimal
  period    String
  features  String[]
  category  String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  bookings  Booking[]
}

enum Role {
  CUSTOMER
  EMPLOYEE
  ADMIN
}

enum CarStatus {
  AVAILABLE
  RENTED
  MAINTENANCE
  UNAVAILABLE
}

enum BookingStatus {
  PENDING
  VERIFIED
  APPROVED
  PAID
  ACTIVE
  COMPLETED
  CANCELLED
  REJECTED
}
